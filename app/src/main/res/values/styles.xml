    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="MyDialog" parent="android:Theme.Dialog">
        <item name="android:height">100dp</item>
