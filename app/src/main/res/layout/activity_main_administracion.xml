<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.Hellman.CAFv2.Administracion.Main">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Panel_Menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/Header"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/menu_ubicaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="25dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:background="@drawable/fake_card_white"
                        android:layout_marginStart="40dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/img_1"
                        app:layout_constraintTop_toTopOf="@id/img_1"
                        app:layout_constraintBottom_toBottomOf="@id/img_1"
                        android:paddingStart="40dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:text="Administrar ubicaciones"
                            android:textColor="@color/black"
                            android:textStyle="bold|italic"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Agregue, modifique o elimine las ubicaciones de la base de datos."/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/img_1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/item_ubicaciones"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/menu_incidencias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/menu_ubicaciones"
                    android:layout_marginTop="25dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:background="@drawable/fake_card_white"
                        android:layout_marginStart="40dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/img_2"
                        app:layout_constraintTop_toTopOf="@id/img_2"
                        app:layout_constraintBottom_toBottomOf="@id/img_2"
                        android:paddingStart="40dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:text="Administrar incidencias"
                            android:textColor="@color/black"
                            android:textStyle="bold|italic"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Revise y administre el historial de incidencias"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/img_2"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/item_incidencias"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/menu_activo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/menu_incidencias"
                    android:layout_marginTop="25dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:background="@drawable/fake_card_white"
                        android:layout_marginStart="40dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/img_3"
                        app:layout_constraintTop_toTopOf="@id/img_3"
                        app:layout_constraintBottom_toBottomOf="@id/img_3"
                        android:paddingStart="40dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:text="Administrar activo"
                            android:textColor="@color/black"
                            android:textStyle="bold|italic"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Agregue, modifique o elimine el activo en la base de datos"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/img_3"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/item_activo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/menu_traspaso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/menu_activo"
                    android:layout_marginTop="25dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:background="@drawable/fake_card_white"
                        android:layout_marginStart="40dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/img_4"
                        app:layout_constraintTop_toTopOf="@id/img_4"
                        app:layout_constraintBottom_toBottomOf="@id/img_4"
                        android:paddingStart="40dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:text="Administrar traspasos"
                            android:textColor="@color/black"
                            android:textStyle="bold|italic"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Verifique el historial de traspasos y genere nuevas transferencias"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/img_4"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/item_traspaso"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_holder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/Header"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:focusable="true"
        android:clickable="true"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blue_selected"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_onbackpressed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:src="@drawable/back_blanco" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:text="Administración"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>