<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Etiflex.Splash.Principal.Principal">

    <LinearLayout
        android:id="@+id/ll_options"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_inventario"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_margin="15dp">

            <View
                android:layout_width="290dp"
                android:layout_height="80dp"
                android:background="@drawable/gray_dark_card_right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ProgressBar
                android:id="@+id/Buscador_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:max="10"
                android:progress="10"
                android:progressDrawable="@drawable/circle"
                android:layout_marginStart="-90dp"
                android:layout_centerVertical="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/title_holder_1"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="7.5dp"
                android:layout_marginEnd="5dp">
                <TextView
                    android:id="@+id/title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="INVENTARIO FÍSICO POR ALMACEN"
                    android:textSize="12.5dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingEnd="80dp"
                    android:paddingStart="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/card_white_right"/>
                <TextView
                    android:id="@+id/number_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/circle_red"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginStart="-60dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp">

            <View
                android:layout_width="290dp"
                android:layout_height="80dp"
                android:background="@drawable/gray_dark_card_left"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ProgressBar
                android:id="@+id/Buscador_progressBar_2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:max="10"
                android:progress="10"
                android:progressDrawable="@drawable/ring_orange"
                android:layout_centerVertical="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <RelativeLayout
                android:id="@+id/title_holder_2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="7.5dp"
                android:layout_marginEnd="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="VALIDAR ORDEN DE PRODUCCIÓN"
                    android:textSize="12.5dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingStart="60dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/card_white_left"/>
                <TextView
                    android:id="@+id/number_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="2"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/circle_orange"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:gravity="center_vertical|center_horizontal" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buscar_epc"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_margin="15dp">

            <View
                android:layout_width="290dp"
                android:layout_height="80dp"
                android:background="@drawable/gray_dark_card_right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ProgressBar
                android:id="@+id/Buscador_progressBar_3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:max="10"
                android:progress="10"
                android:progressDrawable="@drawable/ring_purple"
                android:layout_marginStart="-90dp"
                android:layout_centerVertical="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/title_holder_3"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="7.5dp"
                android:layout_marginEnd="5dp">
                <TextView
                    android:id="@+id/title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="BUSCAR ETIQUETA POR NÚMERO ÚNICO 'EPC'"
                    android:textSize="12.5dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingEnd="80dp"
                    android:paddingStart="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/card_white_right"
                    android:transitionName="number"/>
                <TextView
                    android:id="@+id/number_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="3"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/circle_purple"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginStart="-60dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/purple_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:visibility="gone"/>

