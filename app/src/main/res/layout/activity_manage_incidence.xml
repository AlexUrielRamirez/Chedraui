<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.SCAF.CAFv2.Administracion.Incidences.ManageIncidence">
    <LinearLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blue_selected"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_onbackpressed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:src="@drawable/back_blanco" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:text="Incidencias"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/Header"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:padding="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Denominación del activo"/>
        <TextView
            android:id="@+id/txt_denominacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción del activo"
            android:textSize="18sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Denominación del activo"/>
        <TextView
            android:id="@+id/txt_epc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EPC: 123456123456123456"
            android:textSize="18sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Creada por:"/>
        <TextView
            android:id="@+id/txt_alta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uriel Alejandro Ramírez Moreno"
            android:textSize="18sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Resuleta por:"/>
        <TextView
            android:id="@+id/txt_baja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uriel Alejandro Ramírez Moreno"
            android:textSize="18sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Estado"/>
        <TextView
            android:id="@+id/txt_estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACTIVA"
            android:textSize="18sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_resolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="RESOLVER INCIDENCIA"
        android:background="@color/blue_selected"
        app:layout_constraintBottom_toBottomOf="parent"
        android:enabled="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>