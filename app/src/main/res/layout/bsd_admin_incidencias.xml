<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Acciones"
        android:textColor="@color/black"/>
    <View
        android:id="@+id/separador_1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray_light"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/btn_resolver_incidencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESOLVER INCIDENCIA"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/green_2"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray_light"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/btn_buscar_activo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUSCAR ACTIVO"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/blue_selected"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray_light"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/btn_volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VOLVER"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/rojo_etiflex"/>
</LinearLayout>